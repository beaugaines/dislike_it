= form_for @dislike do |f|
  - if @dislike.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dislike.errors.count, "error")} prohibited this dislike from being saved:"
      %ul
        - @dislike.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :degree
    = f.number_field :degree
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
